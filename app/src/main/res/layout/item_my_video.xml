<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/iv_my_video_img"
        android:layout_width="220dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_my_video_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="가나다라마바사라"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_my_video_img"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_my_video_bookmark"
        />

    <TextView
        android:id="@+id/tv_my_vide_ago"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="a 1days ago"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/iv_my_video_img"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_my_video_bookmark"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>